<?xml version="1.0" ?>
<robot name="midi" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find midi_description)/ros2_control/midi_hardware_interface.xacro"/>

<!-- AGV Base -->

<xacro:midi_ros2_control
    name="midi" prefix="" use_mock_hardware="false" />

<link name="base_link">
    <visual>
      <!-- <origin xyz="0 0 0.0756" rpy="0 0 0"/> -->
      <origin xyz="0 0 0.100" rpy="0 0 1.5758"/>
      <geometry>
        <mesh filename="package://midi_description/mesh/agv_base_conveyor.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0.132501" rpy="0 0 0"/>
      <!-- <origin xyz="0 0 0.1562185" rpy="0 0 0"/> -->
      <geometry>
        <box size="0.877615 0.701947 0.17"/>
        <!-- <box size="0.877615 0.701947 0.217435"/> --> 
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0.1562185" rpy="0 0 0"/>
      <mass value="61"/>
      <inertia ixx="2.745" ixy="0" ixz="0"
               iyy="4.1556" iyz="0"
               izz="6.42" />
    </inertial>
  </link>

<link name="imu_link"/>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link" />
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

<!-- Wheels -->

  <!-- Main -->
    <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0 -0.296 0.1" rpy="-1.570796 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="1" friction="0"/>
    <limit effort="2" velocity="1.0"/>
    </joint>

<link name="right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.03" radius="0.1"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.03" radius="0.1"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.0025750" ixy="0" ixz="0"
               iyy="0.0025750" iyz="0"
               izz="0.0050000" />
    </inertial>
  </link>

    <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0 0.296 0.1" rpy="-1.570796 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="1" friction="0"/>
    <limit effort="2" velocity="1.0"/>
    </joint>

<link name="left_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.03" radius="0.1"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.03" radius="0.1"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.0025750" ixy="0" ixz="0"
               iyy="0.0025750" iyz="0"
               izz="0.0050000" />
    </inertial>
  </link>

<!-- Scanner -->

<joint name="scan_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="0.35 0 0.2232185" rpy="0 0 0"/>
  </joint>

  <link name="base_scan">
    <visual>
      <origin xyz="0 0 -0.067" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://midi_description/mesh/hokuyo_coarse.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 -0.01675" rpy="0 0 0"/>
      <!-- <origin xyz="0.015 0 -0.0065" rpy="0 0 0"/> -->
      <geometry>
        <box size="0.080 0.080 0.080"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.114" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

<joint name="scan_joint_rear" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan_rear"/>
    <origin xyz="-0.35 -0.015 0.2232185" rpy="0 0 3.1415"/>
  </joint>

  <link name="base_scan_rear">
    <visual>
      <origin xyz="0 0 -0.067" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://midi_description/mesh/hokuyo_coarse.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 -0.01675" rpy="0 0 0"/>
      <!-- <origin xyz="0.015 0 -0.0065" rpy="0 0 0"/> -->
      <geometry>
        <box size="0.080 0.080 0.080"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.114" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

</robot>